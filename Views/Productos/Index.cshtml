@{
    ViewData["Title"] = "Home Page";
}

@model List<Productos>;
<!DOCTYPE html>
<html>

<head>
    <title>Lista de Elementos</title>
</head>

<body>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Precio</th>
                <th scope="col">Extras</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var elemento in Model)
            {
                <tr>
                    <td>@elemento.IdProducto</td>
                    <td>@elemento.Descripcion</td>
                    <td>$@elemento.Precio</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-controller="Productos" asp-action="EditarProducto"
                            asp-route-idProducto="@elemento.IdProducto">Editar</a>
                        <a class="btn btn-outline-danger" asp-controller="Productos" asp-action="DeleteProducto"
                            asp-route-idProducto="@elemento.IdProducto"
                            onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

<a class="btn btn-primary" asp-controller="Productos" asp-action="Crear">Crear</a>

</html>